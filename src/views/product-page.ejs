    <h1><%= product.product_name %></h1>
    <img src="<%= product.image_url %>" alt="<%= product.product_name %>" style="max-width: 400px;" />

    <p><strong>Description:</strong> <%= product.product_description %></p>
    <p><strong>Price:</strong> $<%= product.product_price %></p>
    <p><strong>Available:</strong> <%= product.product_availability ? '✅ In Stock' : '❌ Sold Out' %></p>
    <p><strong>Location:</strong> <%= product.product_location %></p>

    <% if (product.tags && product.tags.length > 0) { %>
      <p><strong>Tags:</strong>
        <% product.tags.forEach(tag => { %>
          <span style="margin-right: 8px; padding: 2px 6px; background-color: #eee; border-radius: 4px;"><%= tag %></span>
        <% }) %>
      </p>
    <% } %>